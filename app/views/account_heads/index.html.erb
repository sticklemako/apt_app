<div class="row title-bar">
  <h4 class="center-text">Add / Edit Account Heads</h4>
</div>
<div class="row" style="padding-top:59px;">
  <p id="notice"><%= notice %></p>
</div>
<div class="row">
  <div class="col-md-1">
  </div>
  <div class="col-md-10">
    <table class="table table-custom">
      <thead>
        <tr>
          <th>Name</th>
          <th class="no-bot-border no-bkgrd"></th>
          <th>Categories</th>          
          <th class="no-bot-border no-bkgrd"></th>
          <th>Desc</th>
          <th class="no-bot-border no-bkgrd"></th>
          <th colspan="3" class="center-text">Functions</th>
        </tr>
      </thead>

      <tbody>
        <% @account_heads.each do |account_head| %>
          <tr style="margin-bottom:3px;">
            <td class="cell-style1 align-left"><%= account_head.name %></td>
            <td class="no-top-border"></td>
            <td class="cell-style1 align-left">
              <% account_head.categories.each do |category| %>
                <%= category.name %>, 
              <% end %>
            </td>
            <td class="no-top-border"></td>
            <td class="cell-style1 align-left"><%= account_head.desc %></td>
            <td class="no-top-border"></td>
            <td class="cell-style2"><%= link_to 'Show', account_head %></td>
            <td class="cell-style2"><%= link_to 'Edit', edit_account_head_path(account_head) %></td>
            <td class="cell-style2"><%= link_to 'Destroy', account_head, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-1">
  </div>
</div>


<br>

